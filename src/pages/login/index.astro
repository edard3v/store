---
import Layout from "@layouts/Layout/Layout.astro";
import { ROUTER } from "../_router";
import Email from "@components/inputs/Email/Email.astro";
import Password from "@components/inputs/Password/Password.astro";
import Btn from "@components/buttons/Btn/Btn.astro";
import css from "./_login.module.css";
---

<Layout title={ROUTER.login.display}>
  <main class={css.login}>
    <form id="login-form">
      <Email name={"email"} />
      <Password name={"password"} />
      <Btn id={"submit-login"}>Login</Btn>
    </form>
  </main>
</Layout>

<script>
  import "./_login";
</script>
