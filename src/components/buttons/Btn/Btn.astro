---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"button"> {}

const { class: cls, ...rest } = Astro.props;
---

<button {...rest} class:list={[cls]}>
  <slot />
</button>

<style>
  button {
    padding: var(--md) var(--xl);
    border-radius: var(--md);
    background-color: var(--bg-surf);
    border: var(--border);
    color: var(--white);
    transition: background-color 0.7s;
    min-height: var(--h-input);

    &:hover:not(:disabled) {
      outline: var(--outline);
    }

    &:focus {
      outline: var(--outline);
    }
  }
</style>
