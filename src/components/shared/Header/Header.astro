---
import Link from "@components/links/Link/Link.astro";
import { PAGES } from "src/pages/router";
---

<header>
  <nav>
    {PAGES.map((page) => <Link href={page.href}>{page.display}</Link>)}
  </nav>
</header>

<style>
  header {
    border-bottom: var(--border);
    min-height: 80px;

    display: grid;
    align-items: center;

    nav {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--xl);

      @media (min-width: 320px) and (max-width: 767px) {
        gap: var(--lg);
      }

      a {
        color: inherit;
        text-transform: capitalize;

        &:hover {
          color: var(--primary);
        }
      }
    }
  }
</style>
